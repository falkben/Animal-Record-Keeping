<% @medical_problem = @proposed_treatment.medical_problem %>

<h1>Ending Treatment To Medical Problem: <%=h @medical_problem.title %></h1>

  <p>Treatment:<br/>
  <%= @proposed_treatment.treatment %></p>

<% form_tag :action => 'update', :id => @proposed_treatment, :redirectme => 'list_current', :deactivating => true do %>
  <%= render :partial => 'form' %>
  <%= submit_tag 'End Treatment' %>
<% end %>