<h1>Add Treatment To Medical Problem: <%=h @medical_problem.title %></h1>

<%= start_form_tag :action => 'create', :id => @medical_problem %>
  <%= render :partial => 'form' %>
  <%= submit_tag "New Treatment" %>
<%= end_form_tag %>

<%= link_to 'List Current Medical Problems', :controller => 'medical_problems', :action => 'list_current' %>

<%= render_partial 'medical_problems/show_all_proposed_treatments', @medical_problem %>