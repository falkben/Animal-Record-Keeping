<h1> Weigh bats in <%= @cage.name %></h1>

<%= start_form_tag :action => 'submit_weights', :id => @cage %>

<table>
<th>Band</th>
<th>Weight</th>
<th align='left'>Weight Notes</th>
<th>Previous Weights</th>
<th>Cage</th>
<th>Cage change reason</th>

<%= render_collection_of_partials "bats/weigh_one_bat", @bats %>

</table>
<%= submit_tag 'Submit Weights' %>

<%= end_form_tag %>

<p><%= link_to 'Back', :controller => 'cages', :action => 'choose_cage_to_weigh' %></p>