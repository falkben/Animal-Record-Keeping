<div id='other_tasks'>
  <%= render :partial => 'tasks/hide_tasks', :locals => {:general_tasks => @general_tasks_not_today, :weighing_tasks => @weighing_tasks_not_today,
                                                        :feeding_tasks => @feeding_tasks_not_today, :medical_tasks => @medical_tasks_not_today, :div_id => 'other_tasks'} %>
</div>