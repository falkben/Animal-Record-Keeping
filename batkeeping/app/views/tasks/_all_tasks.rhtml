<h3>Medical Tasks</h3>
<blockquote>
  <% if medical_tasks.length == 0 %>
  No medical tasks.
  <% else %>
    <%= render :partial => 'tasks/tasks_list', :locals =>{:tasks_list => nil, :tasks => medical_tasks, :div_id => 'medical_tasks' + count, 
                                                                  :single_cage_task_list => @single_cage_task_list, :manage => false} %>
    <p>
    <% form_tag :controller => 'tasks', :action => 'new_medical_task' do %>
    Medical Problem: 
    <%= select_tag("id", options_from_collection_for_select(@medical_problems, "id", "title")) %>
    <%= submit_tag "Add a new treatment" %>
    <% end %>
    </p>
  <% end %>
</blockquote>

