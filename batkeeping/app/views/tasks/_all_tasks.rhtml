<h3>Feeding Tasks</h3>
<blockquote>
  <% if feeding_tasks.length == 0 %>
  No feeding tasks.
  <% else %>
  <%= render :partial => 'tasks/tasks_list', :locals =>{:tasks_list => nil, :tasks => feeding_tasks, :div_id => 'feeding_tasks' + count, 
                                                                :single_cage_task_list => @single_cage_task_list, :manage => true} %>
  <p>
  <% form_tag :controller => 'tasks', :action => 'form_to_edit_multiple_feeding_tasks', :id => @cage do %>
  Cage: 
  <%= select_tag("id", options_from_collection_for_select(@feeding_cages, "id", "name")) %>
  <%= submit_tag "Edit multiple feeding tasks" %>
  <% end %>
  </p>
  <% end %>
  <p>
  
  <%= form_remote_tag :url => {:controller => 'tasks', :action => 'remote_new_feed_cage_task', :id => @cage, :div_id => 'feeding_tasks' + count, :feeding_tasks => feeding_tasks, :single_cage_task_list => @single_cage_task_list},
                                                          :update => 'add_feeding_task' %>
  Cage: <%= select_tag("id", options_from_collection_for_select(@cages, "id", "name")) %>
  <%= submit_tag "Add a feeding task" %>
</form>
<div id = "add_feeding_task">
</div>
  
  
  
  </p>
</blockquote>

