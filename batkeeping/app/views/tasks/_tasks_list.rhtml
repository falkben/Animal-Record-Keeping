<div id = "<%= div_id %>">
<% if tasks.length == 0 %>
No tasks.
<% else %>
<table>
  <thead>
  <% if tasks[0].internal_description == 'medical' %>
    <th>Medical Problem</th>
  <% end %>
  <% if !single_cage_task_list %>
    <th>Title</th>
  <% end %>
    <th>User(s)</th>
	<% if tasks[0].internal_description == 'feed' %>
		<th>Food</th>
		<th>Dishes</th>
		<th>Food/Bat</th>
	<% end %>
    <th>Frequency</th>
    <th>Last Done</th>
    <th>Notes</th>
  </thead>
 
 <tbody>  
  
<% for task in tasks %>
 <% if task.current? %>
 <%= render :partial => 'tasks/single_task_list', 
                  :locals => {:single_task_list => nil, :task => task, :manage => manage, :tasks => tasks, 
                  :div_id => div_id, :single_cage_task_list => single_cage_task_list} %>
 <% end %>
<% end %>

 </tbody>
</table>
<% if single_cage_task_list %>
	<% if tasks.length > 0 %>
		<p>
		[<%= link_to_remote "Remove existing tasks",
			:url => {:controller => "tasks", :action => "clear_tasks", :tasks_list => nil, :tasks => tasks, :div_id => div_id, 
			:single_cage_task_list => true, :manage => true}, :update => div_id
		%>]
		</p>
		<% if tasks[0].internal_description == 'feed' %>
			<% if task.cage.fed_every_day? == false && task.cage.bats.length > 0 %>
				<p><b><em>Warning: this cage is not fed every day of the week</em></b></p>
			<% end %>
		<% end %>
	<% end %>
<% end %>

<% end %>
</div>