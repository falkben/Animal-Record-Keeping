<h1>Flight Log for <%= link_to @bat.band, :controller => :bats, :action => :show, :id => @bat %></h1>

<br>

<div id="calendar" style="border:1px solid gray; width:650px; margin-right:auto; margin-left:auto">

<%= render :partial => 'flights/remote_show', :locals => { 
		:bat => @bat, :this_month => Date.today, :flight_dates => @flight_dates, :highlight_today => true, :flights => @flights} %>

</div>

<div style="margin-right:auto; margin-left:auto; width:800px; text-align:center">

<%= button_to 'Add flight log', :action => :new %><br>
<%= link_to 'Choose a different bat', :action => :list %><br>

<p>
<%= render :partial => 'form_to_show_all_flight_logs', :locals =>{:bat=>@bat} %>
</p>

</div>