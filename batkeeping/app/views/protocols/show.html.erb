<p>
  <b>Title:</b>
  <%=h @protocol.title %>
</p>

<p>
  <b>Number:</b>
  <%=h @protocol.number %>
</p>

<p>
  <b>Start date:</b>
  <%=h @protocol.start_date %>
</p>

<p>
  <b>End date:</b>
  <%=h @protocol.end_date %>
</p>

<p>
  <b>Husbandry:</b>
  <%=h @protocol.husbandry.to_s.capitalize %>
</p>

<p>
  <b>Exempt from flight:</b>
  <%=h @protocol.flight_exempt.to_s.capitalize %>
</p>

<p>
  <b>Current bats:</b>
  <table>
  <% for bat in @protocol.bats %>
	<tr>
	<td><%= link_to bat.band, :controller => :bats, :action => :edit, :id => bat %></td>
	<td>Added on: <%= nice_date bat.date_added_to_protocol(@protocol) %></td>
	</tr>
  <% end %>
  </table>
</p>

<p>
  <b>Past bats:</b>
  <table>
  <% i = 0 %>
  <% for bat in @past_bats %>
  <tr>
	<td><%= link_to bat.band, :controller => :bats, :action => :edit, :id => bat %></td>
	<td>Removed on: <%= nice_date @hists[i].date_removed %></td>
    <% i = i + 1 %>
  </tr>
  <% end %>
  </table>
</p>

<p>
<%= render :partial => 'form_to_show_bats_on_protocol_when', :locals =>{:protocol=>@protocol} %>
</p>

<%= link_to 'Edit', edit_protocol_path(@protocol) %> |
<%= link_to 'List Protocols', protocols_path %>