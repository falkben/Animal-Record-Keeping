<h2>Select bat(s) to move from <%= cage.name %></h2>

<div class='left_indent'>

<% form_remote_tag :url => {:controller => 'bats', :action => :choose_destination, :id => cage}, 
                              :update => 'destination_cage' do %>

<table>
<th>Bat</th>
<th>Last Weight</th>
<th>Average Weight</th>

<tr>

<td rowspan=<%=bats.length + 1 %>><%= select_tag("bat[id][]", options_from_collection_for_select(bats, "id", "band"), :multiple => true) %></td></tr>

<% for bat in bats %>
<tr>
<td><%=h bat.weights.recent.weight %>g</td>
<td><%=h bat.average_weight %>g</td>
</tr>
<% end %>

</table>

<p><%= submit_tag 'Select Bats' %></p>

</div>

<% end %>

<div id='destination_cage'>
</div>