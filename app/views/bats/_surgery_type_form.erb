<div id="surgery_type_form">
  <%= link_to_remote "Add New Surgery Type", :url => {:controller => :bats,
    :action => :show_add_surgery_type_form, :bat => bat, 
    :show_submit_button => show_submit_button, :show_surgery_type_form => show_surgery_type_form},
    :update => 'surgery_type_form' %>

  <% if show_surgery_type_form %>
  <br />
  <label for="surgery_type_name">Name: </label>
  <%= text_field :type, :name %>
  <%= button_to_remote "Add", :url => {:controller => :bats, 
    :action => :new_surgery_type, :bat => bat, :show_submit_button => show_submit_button},
    :with => "'name='+encodeURIComponent($F('type_name'))", 
    :update => 'surgery' %><br />
    
  <% end %>
</div>